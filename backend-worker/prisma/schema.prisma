// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String?
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  queries   String?  // Stored as a string, needs to be parsed when read

  @@map("users")
}

model Query {
  id                String   @id @default(uuid())
  userId            String?
  content           String
  intentCategory    String   // Enum: "DIRECT_LLM_ANSWER" | "CACHED_PROFILE" | "QUICK_RAG" | "FULL_RAG"
  createdAt         DateTime @default(now())
  searchResults     String?   // Stored as a string, needs to be parsed when read
  ragResultId       String?
  deepRAGProfileId  String?

  @@map("queries")
}

model SearchResult {
  id        String   @id @default(uuid())
  queryId   String
  type      String   // Enum: "text" | "image" | "video"
  content   String
  metadata  String?  // Stored as a string, needs to be parsed when read
  createdAt DateTime @default(now())

  @@map("search_results")
}

model RAGResult {
  id         String   @id @default(uuid())
  queryId    String
  content    String
  isQuickRAG Boolean
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("rag_results")
}

model DeepRAGProfile {
  id         String   @id @default(uuid())
  queryId    String
  content    String
  reflection String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("deep_rag_profiles")
}